    "private"              : true,
    "homepage"             : "https://fishing-club.appspot.com/",
    "repository"           : {
        "type" : "git",
        "url"  : "git+ssh://git@github.com/ayltai/fishing-club.git"
    },
    "bugs"                 : {
        "url" : "https://github.com/ayltai/fishing-club/issues"
    },
    "keywords"             : [
        "fish",
        "fishing"
    ],
    "dependencies"         : {
        "lodash"           : "^4.17.4",
        "material-ui"      : "^0.18.3",
        "mobx"             : "^3.1.11",
        "mobx-react"       : "^4.2.1",
        "prop-types"       : "^15.5.10",
        "pubsub-js"        : "^1.5.7",
        "randomstring"     : "^1.1.5",
        "react"            : "^15.5.4",
        "react-dom"        : "^15.5.4",
        "react-router-dom" : "^4.1.1",
        "react-split-pane" : "^0.1.63",
        "rx-lite"          : "^4.0.8"
    },
    "devDependencies"      : {
        "autoprefixer"                                   : "^7.1.1",
        "babel-core"                                     : "^6.25.0",
        "babel-eslint"                                   : "^7.2.3",
        "babel-jest"                                     : "^20.0.3",
        "babel-loader"                                   : "^7.0.0",
        "babel-plugin-lodash-modularize"                 : "^0.3.2",
        "babel-plugin-transform-decorators-legacy"       : "^1.3.4",
        "babel-plugin-transform-react-constant-elements" : "^6.23.0",
        "babel-plugin-transform-react-inline-elements"   : "^6.22.0",
        "babel-preset-es2015"                            : "^6.24.1",
        "babel-preset-react-app"                         : "^3.0.0",
        "babel-runtime"                                  : "^6.23.0",
        "case-sensitive-paths-webpack-plugin"            : "^1.1.4",
        "chalk"                                          : "^1.1.3",
        "css-loader"                                     : "^0.28.4",
        "dotenv"                                         : "^4.0.0",
        "enzyme"                                         : "^2.8.2",
        "eslint"                                         : "^3.19.0",
        "eslint-config-react-app"                        : "^1.0.4",
        "eslint-loader"                                  : "^1.7.1",
        "eslint-plugin-flowtype"                         : "^2.34.0",
        "eslint-plugin-import"                           : "^2.3.0",
        "eslint-plugin-jsx-a11y"                         : "^5.0.3",
        "eslint-plugin-react"                            : "^7.0.1",
        "extract-text-webpack-plugin"                    : "^2.1.2",
        "file-loader"                                    : "^0.11.2",
        "flow-bin"                                       : "^0.47.0",
        "fs-extra"                                       : "^3.0.1",
        "html-webpack-plugin"                            : "^2.28.0",
        "jest"                                           : "^20.0.4",
        "jest-serializer-html"                           : "^4.0.0",
        "object-assign"                                  : "^4.1.1",
        "postcss-flexbugs-fixes"                         : "^3.0.0",
        "postcss-loader"                                 : "^2.0.5",
        "promise"                                        : "^7.1.1",
        "react-addons-test-utils"                        : "^15.5.1",
        "react-dev-utils"                                : "^3.0.0",
        "react-error-overlay"                            : "^1.0.7",
        "react-tap-event-plugin"                         : "^2.0.1",
        "simulant"                                       : "^0.2.2",
        "style-loader"                                   : "^0.17.0",
        "stylelint"                                      : "^7.11.0",
        "sw-precache-webpack-plugin"                     : "^0.9.2",
        "url-loader"                                     : "^0.5.8",
        "webpack"                                        : "^2.6.1",
        "webpack-dev-server"                             : "^2.4.5",
        "webpack-manifest-plugin"                        : "^1.1.0",
        "whatwg-fetch"                                   : "^2.0.3"
    },
    "optionalDependencies" : {
        "fsevents" : "*"
    },
    "scripts"              : {
        "start"     : "node scripts/start.js",
        "build"     : "node scripts/build.js",
        "check"     : "flow check",
        "check:all" : "npm run lint && npm run check && npm run stylelint",
        "lint"      : "eslint ./src",
        "stylelint" : "stylelint ./**/*.css",
        "test"      : "node scripts/test.js --env=jsdom"
    },
    "babel"                : {
        "presets" : [
            "react-app"
        ]
    },
    "eslintConfig"         : {
        "extends" : "react-app"
    },
    "jest"                 : {
        "collectCoverageFrom"     : [
            "src/**/*.{js,jsx}"
        ],
        "setupFiles"              : [
            "<rootDir>/config/polyfills.js"
        ],
        "testMatch"               : [
            "<rootDir>/src/**/__tests__/**/*.js?(x)",
            "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
        ],
        "testEnvironment"         : "node",
        "testURL"                 : "http://localhost",
        "transform"               : {
            "^.+\\.(js|jsx)$"              : "<rootDir>/node_modules/babel-jest",
            "^.+\\.css$"                   : "<rootDir>/config/jest/cssTransform.js",
            "^(?!.*\\.(js|jsx|css|json)$)" : "<rootDir>/config/jest/fileTransform.js"
        },
        "transformIgnorePatterns" : [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
        ],
        "moduleNameMapper"        : {
            "^react-native$" : "react-native-web"
        },
        "snapshotSerializers"     : [
            "jest-serializer-html"
        ]
    },
    "engines"              : {
        "node" : ">=6.0.0"
    }
}
